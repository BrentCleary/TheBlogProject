@using Microsoft.AspNetCore.Identity
@using TheBlogProject.Models

@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var userName = UserManager.GetUserName(User);
    var blogUser = await UserManager.FindByNameAsync(userName);

    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><h5>Hello @blogUser.DisplayName @* @User.Identity?.Name! *@</h5></a>
    </li>
    <li class="nav-item">
            <form class="form-inline ms-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn bg-light btn-dark ">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><h5>Register</h5></a>
    </li>
    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><h5>Login</h5></a>
    </li>
}
</ul>
